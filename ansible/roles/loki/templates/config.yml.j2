auth_enabled: false

server:
  http_listen_port: {{ loki.port }}
  grpc_listen_port: {{ loki.grpc_port }}
  log_level: warn

common:
  path_prefix: /loki
  replication_factor: 1
  ring:
    kvstore:
      store: inmemory

schema_config:
  configs:
    - from: 2025-01-01
      store: tsdb
      object_store: s3
      schema: v13
      index:
        prefix: monitoring/loki/index_
        period: 24h

storage_config:
  tsdb_shipper:
    active_index_directory: /loki/index
    cache_location: /loki/index_cache
  aws:
    bucketnames: {{ loki.s3.bucket }}
    endpoint: {{ loki.s3.endpoint }}
    region: {{ loki.s3.region }}
    access_key_id: "{{ loki.s3.access_key }}"
    secret_access_key: "{{ loki.s3.secret_key }}"
    s3forcepathstyle: true

compactor:
  working_directory: /loki/compactor
  compaction_interval: 1h

limits_config:
  retention_period: 168h
  allow_structured_metadata: true
